<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="UTF-8">
  <title>Keranjang Belanja</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
  <style>
    * {
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #462506 0%, #8B4513 25%, #DAA755 75%, #E9C579 100%);
      min-height: 100vh;
      padding: 40px 20px;
      color: #462506;
      position: relative;
      overflow-x: hidden;
    }

    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: 
        radial-gradient(circle at 20% 80%, rgba(218, 167, 85, 0.3) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(159, 105, 32, 0.3) 0%, transparent 50%),
        radial-gradient(circle at 40% 40%, rgba(233, 197, 121, 0.2) 0%, transparent 50%);
      pointer-events: none;
      z-index: -1;
    }

    .container {
      animation: fadeInUp 0.8s ease-out;
    }

    h1 {
      font-weight: 700;
      color: #fff;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
      font-size: 3rem;
      margin-bottom: 2rem;
      animation: bounceInDown 1s ease-out;
      position: relative;
    }

    h1::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 0;
      width: 100px;
      height: 4px;
      background: linear-gradient(90deg, #DAA755, #E9C579);
      border-radius: 2px;
      animation: slideInLeft 1s ease-out 0.5s both;
    }

    .card {
      background: linear-gradient(145deg, #fff8ef 0%, #fef7e8 100%);
      border: none;
      border-radius: 25px;
      box-shadow: 
        0 20px 40px rgba(0, 0, 0, 0.15),
        0 0 0 1px rgba(255, 255, 255, 0.8) inset;
      backdrop-filter: blur(10px);
      animation: fadeInUp 0.8s ease-out 0.3s both;
      transform: translateY(20px);
      position: relative;
      overflow: hidden;
    }

    .card::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
      animation: shimmer 3s infinite;
    }

    @keyframes shimmer {
      0% { left: -100%; }
      100% { left: 100%; }
    }

    .list-group-item {
      border: none;
      border-bottom: 1px solid rgba(218, 167, 85, 0.2);
      background: transparent;
      padding: 20px 15px;
      margin-bottom: 10px;
      border-radius: 15px;
      position: relative;
      transform: translateX(-20px);
      opacity: 0;
      animation: slideInRight 0.6s ease-out forwards;
      transition: all 0.3s ease;
    }

    .list-group-item:nth-child(1) { animation-delay: 0.1s; }
    .list-group-item:nth-child(2) { animation-delay: 0.2s; }
    .list-group-item:nth-child(3) { animation-delay: 0.3s; }
    .list-group-item:nth-child(4) { animation-delay: 0.4s; }

    .list-group-item:hover {
      background: linear-gradient(135deg, rgba(218, 167, 85, 0.1), rgba(233, 197, 121, 0.1));
      transform: translateY(-3px) scale(1.02);
      box-shadow: 0 10px 25px rgba(0,0,0,0.1);
      border-radius: 15px;
    }

    .list-group-item strong {
      color: #8B4513;
      font-size: 1.1rem;
      font-weight: 600;
    }

    .list-group-item small {
      color: #A0522D;
      font-weight: 500;
    }

    .total-harga {
      font-weight: 700;
      font-size: 2rem;
      background: linear-gradient(135deg, #8B4513, #DAA755);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      padding: 20px 0;
      text-align: center;
      position: relative;
      animation: pulse 2s infinite;
    }

    .total-harga::before {
      content: '';
      position: absolute;
      top: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 200px;
      height: 2px;
      background: linear-gradient(90deg, transparent, #DAA755, transparent);
    }

    .btn {
      font-weight: 600;
      padding: 12px 24px;
      border-radius: 50px;
      border: none;
      position: relative;
      overflow: hidden;
      transform: translateY(0);
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
      transition: left 0.5s;
    }

    .btn:hover::before {
      left: 100%;
    }

    .btn-secondary {
      background: linear-gradient(135deg, #5D4037, #8D6E63);
      color: white;
      box-shadow: 0 8px 16px rgba(93, 64, 55, 0.3);
    }

    .btn-secondary:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 24px rgba(93, 64, 55, 0.4);
      background: linear-gradient(135deg, #6D4C41, #A1887F);
    }

    .btn-success {
      background: linear-gradient(135deg, #9F6920, #DAA755, #F4D03F);
      color: white;
      font-weight: 700;
      box-shadow: 0 8px 20px rgba(159, 105, 32, 0.4);
      position: relative;
    }

    .btn-success:hover {
      transform: translateY(-4px) scale(1.05);
      box-shadow: 0 15px 30px rgba(159, 105, 32, 0.5);
      background: linear-gradient(135deg, #B8860B, #F4D03F, #FFD700);
    }

    .btn-danger {
      border-radius: 12px;
      background: linear-gradient(135deg, #E74C3C, #C0392B);
      border: none;
      color: white;
      font-size: 0.85rem;
      padding: 8px 16px;
      box-shadow: 0 4px 12px rgba(231, 76, 60, 0.3);
    }

    .btn-danger:hover {
      transform: translateY(-2px) scale(1.1);
      box-shadow: 0 8px 20px rgba(231, 76, 60, 0.4);
      background: linear-gradient(135deg, #EC7063, #E74C3C);
    }

    .btn-primary {
      background: linear-gradient(135deg, #3498DB, #2980B9);
      border: none;
      box-shadow: 0 8px 16px rgba(52, 152, 219, 0.3);
    }

    .btn-primary:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 24px rgba(52, 152, 219, 0.4);
    }

    .alert-info {
      background: linear-gradient(135deg, #fffaf3, #fff8e7);
      border: 2px solid #e0c9a6;
      color: #7d5a36;
      border-radius: 20px;
      padding: 30px;
      text-align: center;
      font-size: 1.2rem;
      font-weight: 500;
      box-shadow: 0 10px 25px rgba(0,0,0,0.1);
      animation: bounce 1s ease-out;
    }

    .action-buttons {
      animation: fadeInUp 1s ease-out 0.8s both;
      padding: 20px 0;
    }

    /* Loading animation for checkout */
    .checkout-loading {
      position: relative;
    }

    .checkout-loading::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 20px;
      height: 20px;
      border: 2px solid rgba(255,255,255,0.3);
      border-top: 2px solid white;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      transform: translate(-50%, -50%);
    }

    @keyframes spin {
      0% { transform: translate(-50%, -50%) rotate(0deg); }
      100% { transform: translate(-50%, -50%) rotate(360deg); }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes slideInRight {
      from {
        opacity: 0;
        transform: translateX(-30px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes slideInLeft {
      from {
        opacity: 0;
        transform: translateX(-30px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes bounceInDown {
      from {
        opacity: 0;
        transform: translateY(-50px);
      }
      60% {
        opacity: 1;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes pulse {
      0%, 100% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.05);
      }
    }

    @keyframes bounce {
      0%, 20%, 53%, 80%, 100% {
        transform: translateY(0);
      }
      40%, 43% {
        transform: translateY(-10px);
      }
      70% {
        transform: translateY(-5px);
      }
      90% {
        transform: translateY(-2px);
      }
    }

    /* Responsive enhancements */
    @media (max-width: 768px) {
      h1 {
        font-size: 2.5rem;
      }
      
      .total-harga {
        font-size: 1.5rem;
      }
      
      .list-group-item {
        padding: 15px 10px;
      }
    }

    /* Floating particles animation */
    .particle {
      position: absolute;
      background: rgba(218, 167, 85, 0.6);
      border-radius: 50%;
      pointer-events: none;
      animation: float 6s infinite ease-in-out;
    }

    @keyframes float {
      0%, 100% {
        transform: translateY(0) rotate(0deg);
        opacity: 1;
      }
      50% {
        transform: translateY(-20px) rotate(180deg);
        opacity: 0.5;
      }
    }
  </style>
</head>

<body>
  <!-- Floating particles for decoration -->
  <div class="particle" style="top: 10%; left: 10%; width: 8px; height: 8px; animation-delay: 0s;"></div>
  <div class="particle" style="top: 20%; right: 10%; width: 6px; height: 6px; animation-delay: 1s;"></div>
  <div class="particle" style="top: 60%; left: 15%; width: 10px; height: 10px; animation-delay: 2s;"></div>
  <div class="particle" style="bottom: 20%; right: 20%; width: 7px; height: 7px; animation-delay: 3s;"></div>

  <div class="container py-5">
    <h1 class="mb-4">üõí Keranjang Belanja</h1>

    <% if (keranjang && keranjang.items.length > 0) { %>
      <div class="card p-4">
        <div class="card-body">
          <ul class="list-group mb-3">
            <% let totalHarga = 0;
              keranjang.items.forEach(item => {
                const hargaProduk = item.produk.harga || 0;
                totalHarga += hargaProduk * item.quantity;
              }); %>

            <% keranjang.items.forEach(item => { %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <small>Jumlah: <%= item.quantity %></small>
                  <div><strong><%= item.produk.namaProduk %></strong></div>
                </div>
                <div class="text-end" style="min-width: 200px;">
                  <div><small>Harga satuan: Rp <%= item.produk.harga.toLocaleString('id-ID') %></small></div>
                  <div><small>Total: Rp <%= (item.produk.harga * item.quantity).toLocaleString('id-ID') %></small></div>
                </div>
                <form action="/keranjang/hapus" method="POST" class="m-0">
                  <input type="hidden" name="produkId" value="<%= item.produk._id %>">
                  <button type="submit" class="btn btn-danger btn-sm">üóëÔ∏è Hapus</button>
                </form>
              </li>
            <% }) %>
          </ul>

          <div class="total-harga">
            üí∞ Total Harga: Rp <%= totalHarga.toLocaleString('id-ID') %>
          </div>

          <!-- Tombol aksi -->
          <div class="d-flex justify-content-between align-items-center flex-wrap gap-3 mt-4 action-buttons">
            <a href="/homepage" class="btn btn-secondary">
              ‚Üê Lanjut Belanja
            </a>
            <form action="/transaksi/checkout" method="POST" class="m-0">
              <% keranjang.items.forEach(item => { %>
                <input type="hidden" name="produk" value="<%= item.produk._id %>">
                <input type="hidden" name="jumlah" value="<%= item.quantity %>">
              <% }) %>
              <button type="submit" class="btn btn-success" id="checkoutBtn">
                üõçÔ∏è Checkout & Transaksi
              </button>
            </form>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="alert alert-info">
        Keranjang kamu kosong! ü§∑‚Äç‚ôÇÔ∏è
        <br><br>
        <strong>Ayo mulai berbelanja dan temukan produk-produk menarik!</strong>
      </div>
      <div class="text-center">
        <a href="/homepage" class="btn btn-primary">üõí Mulai Belanja</a>
      </div>
    <% } %>
  </div>

  <script>
    // Enhanced error handling with better UX
    const params = new URLSearchParams(window.location.search);
    const error = params.get("error");
    if (error) {
      showCustomAlert(decodeURIComponent(error));
    }

    // Custom alert with better styling
    function showCustomAlert(message) {
      const alertDiv = document.createElement('div');
      alertDiv.innerHTML = `
        <div style="
          position: fixed;
          top: 20px;
          right: 20px;
          background: linear-gradient(135deg, #E74C3C, #C0392B);
          color: white;
          padding: 20px;
          border-radius: 15px;
          box-shadow: 0 10px 25px rgba(0,0,0,0.2);
          z-index: 1000;
          animation: slideInRight 0.5s ease-out;
          max-width: 400px;
        ">
          <strong>‚ö†Ô∏è Perhatian!</strong><br>
          ${message}
          <button onclick="this.parentElement.parentElement.remove()" style="
            position: absolute;
            top: 10px;
            right: 15px;
            background: none;
            border: none;
            color: white;
            font-size: 18px;
            cursor: pointer;
          ">√ó</button>
        </div>
      `;
      document.body.appendChild(alertDiv);
      
      // Auto remove after 5 seconds
      setTimeout(() => {
        if (alertDiv.parentElement) {
          alertDiv.remove();
        }
      }, 5000);
    }

    // --- BLOK BARU (pakai event submit) ---
const formCheckout = document.querySelector('form[action="/transaksi/checkout"]');
if (formCheckout) {
  formCheckout.addEventListener('submit', function () {
    const btn = this.querySelector('#checkoutBtn');
    btn.innerHTML = '‚è≥ Memproses...';
    btn.classList.add('checkout-loading');
    btn.disabled = true;      // ‚Üê tombol baru di-disable SETELAH form benar-benar dikirim
  });
}


    // Add smooth scroll behavior
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        document.querySelector(this.getAttribute('href')).scrollIntoView({
          behavior: 'smooth'
        });
      });
    });

    // Add ripple effect to buttons
    document.querySelectorAll('.btn').forEach(btn => {
      btn.addEventListener('click', function(e) {
        let ripple = document.createElement('span');
        ripple.classList.add('ripple');
        this.appendChild(ripple);

        let x = e.clientX - e.target.offsetLeft;
        let y = e.clientY - e.target.offsetTop;

        ripple.style.cssText = `
          position: absolute;
          border-radius: 50%;
          background: rgba(255,255,255,0.6);
          transform: scale(0);
          animation: ripple 0.6s linear;
          left: ${x}px;
          top: ${y}px;
          width: 20px;
          height: 20px;
          pointer-events: none;
        `;

        setTimeout(() => {
          ripple.remove();
        }, 600);
      });
    });

    // Add CSS for ripple animation
    const style = document.createElement('style');
    style.textContent = `
      @keyframes ripple {
        to {
          transform: scale(4);
          opacity: 0;
        }
      }
      .btn {
        position: relative;
        overflow: hidden;
      }
    `;
    document.head.appendChild(style);

    // Add parallax scrolling effect to background
    window.addEventListener('scroll', () => {
      const scrolled = window.pageYOffset;
      const parallax = document.querySelector('body::before');
      if (parallax) {
        parallax.style.transform = `translateY(${scrolled * 0.5}px)`;
      }
    });

    // Add entrance animations to elements as they come into view
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.animation = 'fadeInUp 0.6s ease-out forwards';
        }
      });
    }, observerOptions);

    // Observe all cards and major elements
    document.querySelectorAll('.card, .alert, .action-buttons').forEach(el => {
      observer.observe(el);
    });
  </script>
</body>

</html>