<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="UTF-8" />
  <title>Pilih Metode Pembayaran</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(to bottom, #462506, #DAA755, #E9C579);
      min-height: 100vh;
      color: #462506;
      padding: 40px 20px;
    }

    .card-payment {
      background-color: #fff8ef;
      border-radius: 20px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
      padding: 30px;
      max-width: 480px;
      margin: auto;
    }

    h2 {
      font-weight: 700;
      text-align: center;
      margin-bottom: 30px;
      color: #9F6920;
    }

    .payment-option {
      background-color: #f2e7d5;
      border: 2px solid transparent;
      border-radius: 16px;
      padding: 20px;
      cursor: pointer;
      text-align: center;
      transition: 0.3s;
    }

    .payment-option:hover {
      background-color: #f0dbb8;
    }

    .payment-option.selected {
      border-color: #9F6920;
      background-color: #faedd6;
    }

    .payment-option img {
      max-width: 100px;
      margin-bottom: 12px;
    }

    .btn-submit {
      background: linear-gradient(45deg, #9F6920, #DAA755);
      color: #fff;
      border: none;
      font-weight: 600;
      border-radius: 50px;
      width: 100%;
      padding: 12px;
      margin-top: 25px;
      box-shadow: 0 4px 12px rgba(159, 105, 32, 0.3);
    }

    .btn-cancel {
      background-color: #6c757d;
      color: white;
      border-radius: 50px;
      width: 100%;
      padding: 12px;
      margin-top: 10px;
      font-weight: 500;
    }

    .btn-submit:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }
  </style>
</head>

<body>
  <div class="card-payment">
    <h2>ðŸª™ Pilih Metode Pembayaran</h2>
    <form id="paymentForm" action="/transaksi/bayar" method="POST">

      <!-- Opsi QRIS -->
      <div class="payment-option mb-3" data-value="qris">
        <img src="/img/QRIS_logo.svg.png" alt="QRIS">
        <div>QRIS (Scan QR Code)</div>
      </div>

      <!-- Input hidden untuk metode -->
      <input type="hidden" name="payment_method" id="paymentMethod" required>

      <!-- Tombol Aksi -->
      <button type="submit" class="btn btn-submit" disabled>Bayar Sekarang</button>
      <button type="button" class="btn btn-cancel" onclick="cancelPayment()">Batalkan</button>
    </form>
  </div>

  <script>
    const options = document.querySelectorAll('.payment-option');
    const paymentMethodInput = document.getElementById('paymentMethod');
    const submitBtn = document.querySelector('.btn-submit');

    options.forEach(option => {
      option.addEventListener('click', () => {
        options.forEach(opt => opt.classList.remove('selected'));
        option.classList.add('selected');
        paymentMethodInput.value = option.getAttribute('data-value');
        submitBtn.disabled = false;
      });
    });

    function cancelPayment() {
      alert('Pembayaran dibatalkan.');
      window.location.href = '/transaksi-gagal';
    }

    document.getElementById('paymentForm').addEventListener('submit', e => {
      if (!paymentMethodInput.value) {
        e.preventDefault();
        alert('Silakan pilih metode pembayaran.');
      }
    });
  </script>
</body>

</html>
